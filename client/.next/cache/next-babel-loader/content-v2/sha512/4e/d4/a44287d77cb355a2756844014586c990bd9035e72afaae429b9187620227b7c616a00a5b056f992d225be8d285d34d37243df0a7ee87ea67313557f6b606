\n    }, TEXT_PERIOD);\n\n    return function cleanUp() {\n      mounted = false;\n    };\n  }, []);\n\n  return { margin, color, opacity, introduce };\n};\n\nexport default useTextLoop;\n"]},"metadata":{},"sourceType":"module"}